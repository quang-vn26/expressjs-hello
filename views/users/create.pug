extends ../layouts/common.pug
block content
  body 
      div.container
        h1 Create user
        if errors
          each error in errors
            .alert.alert-danger= error
          //- each erro
        form(action="/users/create",method = "POST",class="form-group")
          lable Name
          input(name="name",type ="text",value=values ? values.name : "",class="form-control")
          lable Phone
          input(name="phone",type ="number",value=values ? values.phone : "",class="form-control")
          br
          button(class='btn btn-primary') Create