extends ../layouts/common.pug
block title
  title Users
block content
    h2 Users
      a.ml-2.btn.btn-primary(href="/users/create") New
    .d-flex.align-items-center
      form.ml-auto.seach-form(action="/users/search",method = "get",class = 'form-group d-flex')
        input(name="q", type="text", placeholder="name",class='form-control')
        input(type="submit",value = "Search",class='btn btn-primary ml-3')
    table.table
      tr
        th Avatar
        th Name
        th Action
        th Action
  
      each user in users
        tr
          td
            img(src=user.avatar, width="60",class = "rounded-circle")
          td= user.name
          td
            a(href='/users/'+user.id) View
          td 
            a(href='/users/delete/'+user.id,class='text-danger') Delete
      