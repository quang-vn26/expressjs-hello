
extends ../layouts/common
block title
  title Login
block content
  h1 Login
  if errors
    each error in errors
      .alert.alert-danger= error
    //- each erro
  form(action="/login",method = "POST",class="form-group")
    label(for="") Email
    input(name="email",type ="text",value=values ? values.email : "",class="form-control")
    label(for="") Password
    input(name="pw",type ="password",value=values ? values.pw : "",class="form-control")
    br
    button(class='btn btn-primary') Login